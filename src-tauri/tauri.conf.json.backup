{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "小竹子桌面宠物",
  "version": "0.1.0",
  "identifier": "com.leontang.xiaozhuzi-desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "小竹子",
        "width": 300,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": false,
        "visible": true,
        "focus": false,
        "x": 100,
        "y": 100,
        "minWidth": 200,
        "minHeight": 200,
        "maxWidth": 400,
        "maxHeight": 400
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../src/assets/images/*"
    ]
  }
}
